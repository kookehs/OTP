<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings_notifications_section_title">

        <CheckBoxPreference
            android:key="notifications_checkbox_new_match"
            android:title="@string/settings_notifications_new_match_checkbox_title"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="notifications_checkbox_messages"
            android:title="@string/settings_notifications_messages_checkbox_title"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="notifications_checkbox_match_liked"
            android:title="@string/settings_notifications_match_liked_checkbox_title"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_distance_units_section_title">

        <SwitchPreference
            android:title="Switch">

        </SwitchPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_misc_section_title">

        <Preference
            android:title="@string/settings_misc_item_title_sex">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://mrcornman.com/" />
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>