<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrcornman.otp.fragments.ThemProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/user_profile_container">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picture_container"
            tools:context="com.mrcornman.otp.fragments.ThemProfileFragment">

            <com.mrcornman.otp.views.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/picture_image"
                android:contentDescription="@string/content_missing_description"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_container"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/name_text"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                android:id="@+id/age_text"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:layout_toRightOf="@+id/name_text"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ability"
                android:id="@+id/about_user__text"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:paddingTop="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/about_user_info"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interested In"
                android:id="@+id/want_text"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:paddingTop="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/want_info"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>