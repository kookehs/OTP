<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrcornman.otp" >

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mrcornman.otp.MyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name="com.mrcornman.otp.ProductListViewActivity"
            android:label="@string/title_activity_product_list_view"
            android:parentActivityName="com.mrcornman.otp.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mrcornman.otp.MyActivity" />
        </activity>
        <activity
            android:name=".ProductCardViewActivity_"
            android:label="@string/title_activity_product_card_view"
            android:parentActivityName="com.mrcornman.otp.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mrcornman.otp.MyActivity" />
        </activity>
        <activity
            android:name="com.mrcornman.otp.ProductDetailActivity"
            android:label="@string/title_activity_product_detail" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_otp"
            android:parentActivityName="com.mrcornman.otp.MyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWithActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mrcornman.otp.MyActivity" />
        </activity>
    </application>

</manifest>
